<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:book_name) %>:</strong></dt>
  <dd><%= @book.book_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author_name) %>:</strong></dt>
  <dd><%= @book.author_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @book.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @book.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @book.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_attached) %>:</strong></dt>
  <dd><a href="<%= @book.attach.url %> "><%= image_tag @book.attach.url(:pdf_thumbnail), :size => "100x100" %></a></dd>
 </dl>
<%= link_to  @book.attach.url, :class => "btn btn-large btn-danger" do %>
  Download Now
<% end %>
<%= link_to 'Download Report', book_path(format: 'pdf')%>

<p id="pdf_link"><%= link_to "Download Invoice (PDF)",{:action=>'pdf_generate', :format => "pdf" }%></p>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
